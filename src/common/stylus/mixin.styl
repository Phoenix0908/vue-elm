border-1px($color){
  position: relative;
  &:after{
    display: block;
    position absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    border-top: 1px solid $color;
    content:  '';
  }
}
border-none(){
  &:after{
    display none
  }
}
bg-img($url){
  background-image: url("../assets/header/"+$url+"@2X.png")
  @media (webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3){
    background-image: url("../assets/header/"+$url+"@3X.png")
  }
}
